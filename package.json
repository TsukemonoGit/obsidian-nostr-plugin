    "esbuild-svelte": "^0.9.4",
    "obsidian": "latest",
    "svelte": "^5.46.1",
    "svelte-preprocess": "^6.0.3",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@konemono/nostr-content-parser": "^0.6.13",
    "nostr-tools": "^2.19.4",
